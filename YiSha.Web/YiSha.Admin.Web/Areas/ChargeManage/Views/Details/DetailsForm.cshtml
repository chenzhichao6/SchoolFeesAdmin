        <input id="ChargeNo" col="ChargeNo" type="text" style="display:none" />
        <div class="form-group">
            <label class="col-sm-3 control-label">学生编号<font class="red"> *</font></label>
            <div id="studentCode" class="col-sm-8" col="StudentCode">
            </div>
        </div>
